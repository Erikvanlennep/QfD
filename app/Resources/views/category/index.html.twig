{% extends 'base.html.twig' %}

{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}Category{% endblock %}

{% block content %}

    {{ form_start(form) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}

    <table class="table table-hover">
        <thead>
            <tr>
                <th class="col-xs-12 col-md-10">Categorie</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.category }}</td>
                <td>
                    <a href="{{ path('category_edit', { 'id': category.id }) }}" class="text-warning" title="Edit">
                        <button type="button" class="btn btn-default">
                            <i class="material-icons">edit</i>
                        </button>
                    </a>
                </td>
                <td class="text-right">
                    <a href="{{ path('category_delete', { 'id': category.id }) }}" class="text-danger" title="Delete">
                        <button type="button" class="btn btn-default btn-danger">
                            <i class="material-icons">delete</i>
                        </button>
                    </a>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
