{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <form action="{{ path("fos_user_security_check") }}" method="post" class="form-inline">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <div class="form-group">
            <label for="username" class="sr-only">{{ 'form.email'|trans }}</label>
            <input class="form-control" placeholder="{{ 'form.email'|trans }}" type="text" id="username" name="_username"
                   required="required" />
        </div>
        <div class="form-group">
            <label for="password" class="sr-only">{{ 'security.login.password'|trans }}</label>
            <input class="form-control" type="password" id="password" name="_password"
                   placeholder="{{ 'security.login.password'|trans }}" required="required"/>
        </div>

        <input type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}"
               class="btn btn-default"/>
    </form>

{% endblock fos_user_content %}